# Monday.com Configuration
MONDAY_API_KEY=your_monday_api_key_here
MONDAY_API_URL=https://api.monday.com/v2
MONDAY_BOARD_ID=your_board_id_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration - includes your Netlify site
CORS_ORIGIN=http://localhost:8080,https://buildcore-vendor-application.netlify.app,http://127.0.0.1:5500

# Email Configuration (disabled for now)
SEND_EMAILS=false
FROM_EMAIL=vendorsupport@mybuildcore.com
TEAM_EMAIL=vendorsupport@mybuildcore.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_DUPLICATE_CHECK=true
ENABLE_AUTO_EMAIL=false
ENABLE_FILE_UPLOAD=true
